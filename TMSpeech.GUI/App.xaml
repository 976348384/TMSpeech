<Application x:Class="TMSpeech.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TMSpeech.GUI"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             ShutdownMode="OnMainWindowClose"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="FontBrush" Color="Red"/>
            <SolidColorBrush x:Key="StrokeBrush" Color="Black"/>
            <SolidColorBrush x:Key="HoverBgBrush" Color="#66A9CEFF"></SolidColorBrush>
            <SolidColorBrush x:Key="ListBgBrush" Color="#88A9CEFF"></SolidColorBrush>
            <FontFamily x:Key="FontFamily">黑体</FontFamily>
            <sys:Int32 x:Key="StrokeSize">1</sys:Int32>
            <sys:Int32 x:Key="FontSize">32</sys:Int32>
        </ResourceDictionary>


    </Application.Resources>
</Application>
